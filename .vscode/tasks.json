{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Rush Update",
      "type": "shell",
      "group": "none",
      "command": "node",
      "args": ["common/scripts/install-run-rush.js", "update"]
    },
    {
      "label": "Rush build",
      "type": "shell",
      "group": "build",
      "command": "rush",
      "args": [
        "build",
        "--verbose"
      ]
    }
  ]
}
